generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setting {
  name     String    @unique
  boolean  Boolean?
  string   String?
  json     Json?
  int      Int?
  bigint   BigInt?
  datetime DateTime?

  @@map("settings")
}

model QueueItem {
  id   String @id @unique
  user Json?

  @@map("queue")
}

model AddedSong {
  id       String @unique
  userId   String @map("user_id")
  name     String
  username String

  @@map("added_songs")
}

model RecentlyPlayedTrack {
  id   String   @id @unique
  time DateTime

  @@map("recenly_played")
}

model BannedUser {
  id          String  @unique
  global_name String
  username    String
  avatar      String
  reason      String?

  @@map("banned_users")
}
